<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Update User Page</title>
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>
    <div class="topnav">
      <a  href="/">Delete User Page</a>
      <a class="active" href="/createUserPage">Create User</a>
    </div>
    <div class="Add-new-user">
        <form action="/delete-user" method="POST">
            <fieldset>
              <legend>Delete user:</legend>
              <div class="input-group d-none">
                <label >Id:</label>
                <input type="text" name="idUser" value="<%=userDelete.id%>"/>
              </div>
              <div class="input-group">
                <label >Are you sure to delete user with email:</label>
                <input type="text" name="email" value="<%=userDelete.email%>"/>
              </div>
                <button>Confirm</button>
              </div>
            </fieldset>
          </form>
    </div>
  </body>
</html>
